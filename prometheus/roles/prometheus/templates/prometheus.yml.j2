- job_name: node_exporter
  scrape_interval: 15s
  static_configs:
  - targets:
{% for server in groups[prometheus_node_exporter_group] %}
    - {{ server }}:9100
{% endfor %}

rule_files:
  - "rules.yml"
  
alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - "172.17.0.6:9093"


{% endif %}


